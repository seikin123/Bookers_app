<body>
<p id="notice"></p>
<%= notice %>
<h1>Books</h1>
<table class="table">
<tr>
  <th>Title</th><th>Body</th>
  <th colspan="2"></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ"  %></td>
  </tr>
  <% end %>
  
  </table>
  <h3>New Books</h3>
  <%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>

<% end %>
</body>